{
	"manifest_version": 2,
	"name": "chrome扩展",
	"version": "0.3",
	"description": "",
	
	"background": {
		"page":"popup.html"
	},
	"content_scripts": [
		{
			"matches": ["http://www.toranoana.jp/*/article/*"],
			"js": [
				"include/jquery-1.11.0.min.js",
				"scripts/tora.js",
				"scripts/main.js"
			]
		},
		{
			"matches": ["http://www.toranoana.jp/*/genre/*"],
			"css": ["css/toraextend.css"],
			"js": [
				"include/jquery-1.11.0.min.js",
				"scripts/tora.js",
				"scripts/main_genre.js"
			]
		}
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}
